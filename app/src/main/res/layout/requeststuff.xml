<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.raindown.finalyearproject.SellStuff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/captureImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/lightgrey" />

        <ImageView
            android:id="@+id/buttonCamera"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="-170dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:src="@mipmap/icon_camera" />

        <ScrollView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fadeScrollbars="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/stuffName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Enter item title"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/stuffDescription"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Describe the item"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/stuffPrice"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="Price"
                        android:inputType="numberDecimal"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/stuffQuantity"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="Quantity"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/categorySpinner"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/lightgrey"
                        android:popupBackground="@color/beige"
                        android:textSize="15dp"></Spinner>

                    <Spinner
                        android:id="@+id/conditionSpinner"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/lightgrey"
                        android:popupBackground="@color/beige"
                        android:textSize="15dp"></Spinner>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/validStartDate"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="Start Date"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/validEndDate"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="Click To Add End Date"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/requeststuff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="#ffbb6d"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Request"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>
