<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/userMessage_Cardview"
    android:layout_marginTop="5dp"
    android:layout_margin="5dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sender_message_text"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="Sended Message Text"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/user_message_textstyle"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/sender_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textSize="10dp"
            android:layout_toLeftOf="@id/sender_message_text"
            android:layout_alignBottom="@id/sender_message_text"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>