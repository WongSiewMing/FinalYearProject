<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:id="@+id/storeListCardView"
    android:layout_margin="5dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="10dp"
    android:clickable="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/storeList_img"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:background="@color/black"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/storeList_img"
            android:layout_toEndOf="@id/storeList_img"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="33dp"
            android:text="Shop Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/storeList_img"
            android:layout_centerInParent="true"
            android:background="@color/lightorange"
            android:orientation="vertical">

            <TextView
                android:id="@+id/store_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop Detail"
                android:maxLines="2"
                android:maxLength="30"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/store_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop rating"/>

        </LinearLayout>

        <TextView
            android:id="@+id/creator_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/storeList_img"
            android:layout_alignBottom="@id/storeList_img"
            android:text="Creator"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>