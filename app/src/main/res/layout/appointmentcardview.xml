<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appointmentCardView"
    android:background="@color/white"
    app:cardElevation="0dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/requesterPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_student"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/requesterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name here"
            android:maxLength="25"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/requesterPhoto"
            android:layout_alignTop="@id/requesterPhoto"
            android:layout_marginStart="5dp"/>

        <TextView
            android:id="@+id/requesterProgramme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="programme"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/requesterPhoto"
            android:layout_below="@id/requesterName"
            android:layout_alignStart="@id/requesterName"/>
        <View
            android:id="@+id/devider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@id/requesterPhoto"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/stuffImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_student"
            android:layout_marginStart="5dp"
            android:layout_below="@id/devider1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stuffName"
            android:text="stuffName"
            android:textColor="@color/black"
            android:maxLength="25"
            android:layout_toEndOf="@id/stuffImage"
            android:layout_alignTop="@id/stuffImage"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/stuffDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stuff description"
            android:textColor="@color/black"
            android:layout_below="@id/stuffName"
            android:layout_alignStart="@id/stuffName"
            android:maxLength="30"/>
        <View
            android:id="@+id/devider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@id/stuffImage"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:text="Date"
            android:layout_below="@id/devider2"
            android:layout_marginStart="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dayofweek"
            android:textColor="@color/black"
            android:layout_below="@+id/text1"
            android:id="@+id/dayOfWeek"
            android:layout_alignStart="@id/text1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date here"
            android:textColor="@color/black"
            android:layout_below="@id/dayOfWeek"
            android:layout_alignStart="@id/text1"
            android:id="@+id/appointmentDate"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:text="From time : "
            android:layout_toEndOf="@id/appointmentDate"
            android:layout_alignTop="@id/dayOfWeek"
            android:layout_marginStart="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="startTime"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text2"
            android:layout_alignTop="@id/dayOfWeek"
            android:id="@+id/startTime"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To time : "
            android:layout_below="@id/text2"
            android:layout_alignStart="@id/text2"
            android:id="@+id/text3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="toTime"
            android:textColor="@color/black"
            android:id="@+id/endTime"
            android:layout_toEndOf="@id/text3"
            android:layout_alignTop="@id/text3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Accepted"
            android:textColor="@color/lightgreen"
            android:layout_marginEnd="5dp"
            android:layout_alignTop="@id/dayOfWeek"
            android:id="@+id/appointmentStatus"
            android:clickable="true"
            android:focusable="true"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>