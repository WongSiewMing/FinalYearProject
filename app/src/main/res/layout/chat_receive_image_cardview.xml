<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/receivedImage_CardView"
    android:layout_marginTop="5dp"
    android:layout_margin="5dp"
    app:cardElevation="0dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Opponent_photo_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_student"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/Opponent_name_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_toEndOf="@id/Opponent_photo_image"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_alignTop="@id/Opponent_photo_image"
            android:layout_marginStart="5dp"/>

        <ImageView
            android:id="@+id/received_image_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"
            android:layout_toEndOf="@+id/Opponent_photo_image"
            android:layout_below="@+id/Opponent_name_image"
            android:src="@drawable/ic_camera"/>

        <TextView
            android:id="@+id/Opponent_msg_received_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/received_image_view"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/received_image_view"
            android:text="time"
            android:textSize="10dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>