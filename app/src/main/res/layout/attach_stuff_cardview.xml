<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/attachStuffCardView"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/attachStuffImage"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/background"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stuff Name :"
            android:layout_toEndOf="@+id/attachStuffImage"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:id="@+id/text3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name here"
            android:maxWidth="150dip"
            android:maxLength="30"
            android:ellipsize="end"
            android:layout_toEndOf="@id/attachStuffImage"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/text3"
            android:id="@+id/attachStuffName"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stuff Description :"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/text4"
            android:layout_below="@+id/attachStuffName"
            android:layout_toEndOf="@id/attachStuffImage"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no description"
            android:layout_below="@+id/text4"
            android:layout_toEndOf="@id/attachStuffImage"
            android:layout_marginStart="5dp"
            android:maxWidth="150dip"
            android:maxLength="30"
            android:ellipsize="end"
            android:id="@+id/attachStuffDescription"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>