<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/receivedMessage_CardView"
    android:layout_marginTop="5dp"
    android:layout_margin="5dp"
    app:cardElevation="0dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Opponent_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_student"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/Opponent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:layout_toEndOf="@id/Opponent_photo"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_alignTop="@id/Opponent_photo"
            android:layout_marginStart="5dp"/>
        <TextView
            android:id="@+id/Opponent_message"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/Opponent_photo"
            android:layout_below="@id/Opponent_name"
            android:layout_marginStart="5dp"
            android:text="Received Message Text"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/received_message_textstyle"
            android:gravity="center"/>
        <TextView
            android:id="@+id/Opponent_msg_received_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_toEndOf="@id/Opponent_message"
            android:layout_alignBottom="@id/Opponent_message"
            android:textSize="10dp"
            android:layout_marginStart="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>