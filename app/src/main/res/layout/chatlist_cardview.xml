<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chatList_cardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/studentPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/icon_student" />

        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/studentPhoto"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/studentPhoto"
            android:fontFamily="sans-serif-smallcaps"
            android:maxLength="50"
            android:text="Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/studentMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentName"
            android:layout_alignStart="@id/studentName"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_toEndOf="@id/studentPhoto"
            android:maxLength="30"
            android:text="message" />

        <TextView
            android:id="@+id/studentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/studentName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="17dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Time" />

        <TextView
            android:id="@+id/studentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/studentTime"
            android:layout_alignTop="@id/studentMsg"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-22dp"
            android:layout_marginEnd="17dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Date" />


    </RelativeLayout>

</android.support.v7.widget.CardView>