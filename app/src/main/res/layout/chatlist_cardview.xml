<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chatList_cardView">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/studentPhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon_student"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/studentPhoto"
            android:layout_alignTop="@id/studentPhoto"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:maxLength="50"
            android:id="@+id/studentName"/>
        <TextView
            android:id="@+id/studentMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="message"
            android:layout_toEndOf="@id/studentPhoto"
            android:layout_alignStart="@id/studentName"
            android:layout_below="@id/studentName"
            android:maxLength="30"/>
        <TextView
            android:id="@+id/studentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/studentName"/>
        <TextView
            android:id="@+id/studentDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_below="@id/studentTime"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/studentMsg"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>