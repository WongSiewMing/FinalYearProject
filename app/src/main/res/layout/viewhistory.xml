<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.raindown.finalyearproject.ManageTradeRequest">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:id="@+id/manageTradeRequestList"
        android:drawSelectorOnTop="false"
        android:listSelector="@color/lightgrey">
    </ListView>


    <ImageView
        android:id="@+id/noTradeRequest"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="70dp"
        android:src="@mipmap/icon_info"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/noTradeRequestFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No trade request found !"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/deleteAllSearchHistory"
        android:tint="@color/white"
        android:backgroundTint="@color/bgBottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_delete"
        android:contentDescription="Delete All History"
        android:layout_margin="20dp" />
</FrameLayout>
