<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:id="@+id/selectTimeCardView"
    android:clickable="true"
    android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day of week"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:id="@+id/availableDate"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:layout_toEndOf="@id/availableDate"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@id/availableDate"
            android:id="@+id/text3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text3"
            android:layout_alignTop="@id/text3"
            android:layout_marginStart="5dp"
            android:id="@+id/date"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From time :"
            android:layout_toEndOf="@id/availableDate"
            android:layout_below="@id/text3"
            android:layout_marginStart="10dp"
            android:id="@+id/text1"/>

        <TextView
            android:id="@+id/availableStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_toEndOf="@id/text1"
            android:layout_alignTop="@id/text1"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To time :"
            android:layout_below="@id/text1"
            android:layout_alignStart="@id/text1"
            android:id="@+id/text2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:layout_toEndOf="@id/text2"
            android:layout_alignTop="@id/text2"
            android:layout_alignStart="@id/availableStartTime"
            android:id="@+id/availableEndTime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="@color/lightgreen"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/availableDate"
            android:layout_marginEnd="10dp"
            android:id="@+id/availableStatus"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>