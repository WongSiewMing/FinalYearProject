<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.raindown.finalyearproject.FeedbackForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="449dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Select type of feedback : "
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/bugIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_bug" />


                <ImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/uiIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_ui" />

                <ImageView
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/featureIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/icon_feature" />

            </LinearLayout>


            <TextView
                android:id="@+id/bugText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Bug"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/uiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="-28dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="User Interface"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/featureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="-30dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Feature"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Enter your feedback :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/problemInput"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Your feedback is highly appreciated and will help us to improve our application to serve you better"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/improve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Suggestions for improvements :"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/improveInput"
                android:layout_width="330dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:hint="Your suggestions are highly appreciated as well"
                android:textSize="15dp" />

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="460dp"
        android:background="#ffbb6d"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Submit"
        android:textSize="15dp"
        android:textStyle="bold" />


</FrameLayout>
