<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.raindown.finalyearproject.MaintainStuff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/stuffImage"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/lightgrey"
            android:src="@mipmap/icon_miscellaneous" />

        <ImageView
            android:id="@+id/buttonCamera"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="-170dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:src="@mipmap/icon_camera" />

        <ScrollView
            android:layout_width="380dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:fadeScrollbars="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/stuffName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Enter item title"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Describe the item"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/price"
                        android:inputType="numberDecimal"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="Price"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/quantity"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="Quantity"
                        android:textAlignment="center"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/categorySpinner"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/lightgrey"
                        android:popupBackground="@color/beige"
                        android:textSize="15dp"></Spinner>

                    <Spinner
                        android:id="@+id/conditionSpinner"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/lightgrey"
                        android:popupBackground="@color/beige"
                        android:textSize="15dp"></Spinner>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/period"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:hint="Previous period : "
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/validStartDate"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="21dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textAlignment="center"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/validEndDate"
                        android:layout_width="159dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:hint="Click To Add End Date"
                        android:textAlignment="center"
                        android:textSize="15dp" />


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="69dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/update"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/icon_update" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/icon_delete" />

            <ImageView
                android:id="@+id/sold"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/icon_sold" />

        </LinearLayout>


    </LinearLayout>


</FrameLayout>
